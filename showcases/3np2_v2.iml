prog threeNpOne (in i: int, in j: int, out cycles: int) {

    var curr: int;
    var n: int;
    while (i <= j) {
        curr := 1;
        n := i;
        while (n /= 1)
        {
            if ((n % 2) = 1)
            {
                n := (3 * n) + 1;
            }
            else
            {
                n := n / 2;
            }
            curr := curr + 1;
        }
        if (curr > cycles) {
            cycles := curr;
        }
        i := i + 1;
    }
}